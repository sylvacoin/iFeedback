@model iFeedback.Models.Feedback
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="welcome-msg pt-3 pb-4">
    <h1><span class="text-primary">@Model.CustomerName's</span> feedback</h1>
</div>

<div class="row">
    <div class="col-5 d-flex flex-column">
        <div class="d-flex justify-content-center align-items-center p-5">
            <img src="https://www.gravatar.com/avatar/@ViewData["imgHash"]" class="img-thumbnail img-border w-25 img-rounded" />
        </div>
        <div class="d-flex justify-content-around card">
            <ul class="list-unstyled card-body">
                <li class="p-1 d-flex justify-content-between"><label class="w-25">Name:</label> <span class="w-75">@Model.CustomerName</span></li>
                <li class="p-1 d-flex justify-content-between"><label class="w-25">Email:</label> <span class="w-75">@Model.CustomerEmail</span></li>
                <li class="p-1 d-flex justify-content-between"><label classs="w-25">Phone:</label> <span class="w-75">@Model.CustomerPhone</span></li>
                <li class="p-1 d-flex justify-content-between"><label class="w-25">Date</label> <span class="w-75">@Model.CreatedDate</span></li>
            </ul>
        </div>
    </div>
    <div class="col-7 p-1 card">
        <div class="card-body d-flex flex-column justify-content-end align-content-between">
            <p>@Model.Comment</p>
            <ul class="list-unstyled card-body">
                <li class="p-1 d-flex justify-content-between"><label class="w-25">IP:</label> <span class="w-75">@Model.Ip</span></li>
                <li class="p-1 d-flex justify-content-between"><label classs="w-25">Country:</label> <span class="w-75">@Model.Region (@Model.Country)</span></li>
                <li class="p-1 d-flex justify-content-between"><label class="w-25">City</label> <span class="w-75">@Model.City</span></li>
            </ul>
        </div>

        <div class="card-footer">
            <a asp-controller="Dashboard" asp-action="list" class="btn btn-dark">Go Back</a>
        </div>
    </div>
</div>
