@model iFeedback.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<!-- content -->

<div class="welcome-msg pt-3 pb-4">
    <h1>Hi <span class="text-primary">@Model.Username</span>, Welcome back</h1>
    <p>These are what you missed</p>
</div>

<!-- statistics data -->
<div class="statistics">
    <div class="row">
        <div class="col-xl-6 pr-xl-2">
            <div class="row">
                <div class="col-sm-6 pr-sm-2 statistics-grid">
                    <div class="card card_border border-primary-top p-4">
                        <i class="lnr lnr-users"> </i>
                        <h3 class="text-primary number">@Model.TotalCustomers</h3>
                        <p class="stat-text">Total Customers</p>
                    </div>
                </div>
                <div class="col-sm-6 pl-sm-2 statistics-grid">
                    <div class="card card_border border-primary-top p-4">
                        <i class="lnr lnr-chart-bars"> </i>
                        <h3 class="text-secondary number">@Model.AverageRating</h3>
                        <p class="stat-text">Average Rating</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 pl-xl-2">
            <div class="row">
                <div class="col-sm-6 pr-sm-2 statistics-grid">
                    <div class="card card_border border-primary-top p-4">
                        <i class="lnr lnr-bubble"> </i>
                        <h3 class="text-success number">@Model.TotalFeedback</h3>
                        <p class="stat-text">Total Feedbacks</p>
                    </div>
                </div>
                <div class="col-sm-6 pl-sm-2 statistics-grid">
                    <div class="card card_border border-primary-top p-4">
                        <i class="lnr lnr-flag"> </i>
                        <h3 class="text-danger number">Your IP</h3>
                        <p class="stat-text" id="ip">0.0.0.0</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //statistics data -->
<!-- charts -->
<div class="chart">
    <div class="row">
        <div class="col-lg-6 pr-lg-2 chart-grid">
            <div class="card text-center card_border">
                <div class="card-header chart-grid__header">
                    Rating Chart
                </div>
                <div class="card-body">
                    <!-- bar chart -->
                    <div id="container">
                        <canvas id="barchart"></canvas>
                    </div>
                    <!-- //bar chart -->
                </div>
                <div class="card-footer text-muted chart-grid__footer">
                    Updated 2 hours ago
                </div>
            </div>
        </div>
        <div class="col-lg-6 pl-lg-2 chart-grid">
            <div class="card text-center card_border">
                <div class="card-header chart-grid__header">
                    Line Chart
                </div>

                <div class="inbox_chat">
                    <div class="chat_list">
                        <div class="chat_people">
                            <div class="chat_img">
                                <i class="fa fa-map-pin"></i>
                            </div>
                            <div class="chat_ib">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                            </div>
                        </div>
                    </div>
                    <div class="chat_list">
                        <div class="chat_people">
                            <div class="chat_img">
                                <i class="fa fa-map-pin"></i>
                            </div>
                            <div class="chat_ib">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                            </div>
                        </div>
                    </div>
                    <div class="chat_list">
                        <div class="chat_people">
                            <div class="chat_img">
                                <i class="fa fa-map-pin"></i>
                            </div>
                            <div class="chat_ib">
                                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- //charts -->
<!-- //content -->

@section FooterScripts {
    <script>

        $.ajax({
            url: '/api/get-chart-data',
            success: function (o) {

                if (o != null && o.length > 0) {
                    var label = o.map(x => x.name.toString());
                    var value = o.map(x => x.count);
                    new Chart(document.getElementById("barchart"), {
                        type: 'bar',
                        data: {
                            labels: label,
                            datasets: [{
                                data: value,
                                label: 'Total Rating Count',
                                backgroundColor: "#4755AB",
                                borderWidth: 1,
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'top',
                            },
                        }
                    });
                }
            }
        });

        $.ajax({
            url: "//api.ipify.org/?format=json",
            dataType: 'json',
        }).success(function (data) {
            $('#ip').html(data.ip);
        }).error(function (jqXHR, textStatus, errorThrown) {
            console.log(jqXHR);
            console.log(textStatus);
            console.log(errorThrown);
        });
    </script>
}
